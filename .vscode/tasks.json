{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "tasks": [
        {
            "label": "📟重启服务",
            "command": [
                "taskkill /f /im nginx.exe &&",
                "start nginx",
            ]
        },
        {
            "label": "🙈重载服务",
            "command": [
                "nginx -s reload",
            ]
        },
    ]
}
